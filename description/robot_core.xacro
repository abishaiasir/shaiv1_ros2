<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    
    <!-- BASE LINK -->
    <link name="base_link">
    
    </link>

    <!-- CHASSIS LINK -->
    
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.04 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.205 0 0.1"/> <!--half of box size-->
            <geometry>
                <box size="0.41 0.37 0.20"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.205 0 0.1"/> <!--half of box size-->
            <geometry>
                <box size="0.41 0.37 0.20"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="1" x="0.41" y="0.37" z="0.20">
            <origin xyz="0.205 0 0.1" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.200 0" rpy="-${pi/2} 0 0" /> <!--wheel distance from the origin/center and orientation-->
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.033" length="0.035"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.033" length="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.033">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.200 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.033" length="0.035"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.033" length="0.035"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.035" radius="0.033">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- LEFT CASTER WHEEL LINK -->

    <joint name="left_caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="left_caster_wheel"/>
        <origin xyz="0.377 0.152 0"/> <!-- x=length-radius y=(width/2)-radius -->
    </joint>


    <link name="left_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.033"/> <!-- make sure same radius with wheel so it will be even on ground -->
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.033"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.033">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="left_caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- RIGHT CASTER WHEEL LINK -->

    <joint name="right_caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="right_caster_wheel"/>
        <origin xyz="0.377 -0.152 0"/>
    </joint>


    <link name="right_caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.033"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.033"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.033">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="right_caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>